@model RegisterViewModel
<div id="register" class="modal hide fade in" tabindex="-1" role="dialog" aria-labelledby="register" aria-hidden="false">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3>Register User</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal registerFrm" asp-action="Register" asp-controller="Account">
            <div class="control-group">
                <input type="text" asp-for="Email" placeholder="Email">
            </div>
            <div class="control-group">
                <input type="password" asp-for="Password" placeholder="Password">
            </div>
            <div class="control-group">
                <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password">
            </div>
            <button type="submit" class="btn btn-success">Register</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        </form>
    </div>
</div>